<Window x:Class="ClickBar.Views.Sale.ItemInvoiceAddZeljeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickBar.Views.Sale" xmlns:sale="clr-namespace:ClickBar.Models.Sale" d:DataContext="{d:DesignInstance Type=sale:ItemInvoice}"
        mc:Ignorable="d"
        Title="Dodavanje zelje" 
        Height="650" Width="850"
        Background="{StaticResource BrushLogo2}"
        WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Foreground="Black"
           FontSize="38"
           Content="Dodavanje zelja"
           Grid.Row="0"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Margin="0 10"/>

        <ScrollViewer Grid.Row="1"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="Artikal:"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           FontSize="16"/>
                    <ItemsControl ItemsSource="{Binding Zelje}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <Label Content="{Binding Name}"
                                           HorizontalAlignment="Stretch"
                                           HorizontalContentAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           Height="30"
                                           BorderBrush="Black"
                                           BorderThickness="1"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Label Content="Želja:"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="16"/>
                    <ItemsControl ItemsSource="{Binding Zelje, Mode=TwoWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBox Text="{Binding Description, Mode=TwoWay}"
                                             HorizontalAlignment="Stretch"
                                             VerticalContentAlignment="Center"
                                             HorizontalContentAlignment="Center"
                                             VerticalAlignment="Center"
                                             FontSize="14"
                                             Height="30"
                                             Width="450"
                                             BorderBrush="Black"
                                             BorderThickness="1"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <Label Content="Fixne želje:"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="16"/>
                    <ItemsControl ItemsSource="{Binding Zelje, Mode=TwoWay}"
                                  x:Name="itemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ComboBox x:Name="WishComboBox"
                                          Width="200"
                                          Height="30" 
                                          HorizontalAlignment="Center" VerticalAlignment="Top"
                                          ItemsSource="{Binding FixneZelje}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Zelja}" 
                                                           VerticalAlignment="Center"/>
                                                <CheckBox IsChecked="{Binding IsChecked}" 
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
            
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <Label Content="Globalna zelja:"
                   FontSize="14"/>
            
            <TextBox Text="{Binding GlobalZelja, Mode=TwoWay}"
                     HorizontalAlignment="Stretch"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Height="30"
                     Width="450"
                     BorderBrush="Black"
                     BorderThickness="1"/>
        </StackPanel>

        <Button Grid.Row="3"
            Margin="0 10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource RoundCorner}"
            Height="50"
            Width="190"
            Click="Button_Click">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center"
                   HorizontalContentAlignment="Center"
                   FontSize="24"
                   Content="SAČUVAJ"
                   FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
